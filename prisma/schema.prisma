generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                  String        @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  email               String        @unique
  password            String
  role                Role
  balance             Float         @default(100.0) 
  loginConfirmId String?  @unique
  sentTransactions    Transaction[] @relation("SentTransactions")
  receivedTransactions Transaction[] @relation("ReceivedTransactions")
}

model UserTemp {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique
  password String
  role Role
  balance Float @default(100.0)
  confirmId String @unique
  createdAt DateTime @default(now())
}

model Transaction {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  fromUserId  String   @db.ObjectId
  toUserId    String   @db.ObjectId
  amount      Float
  timestamp   DateTime @default(now())
  fromUser    User     @relation("SentTransactions", fields: [fromUserId], references: [id])
  toUser      User     @relation("ReceivedTransactions", fields: [toUserId], references: [id])
}

enum Role {
  CLIENT
  MERCHANT
  SUPPLIER
}
